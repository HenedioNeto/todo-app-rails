<!-- app/views/task_lists/new.html.erb -->
<div class="row justify-content-center fade-in">
  <div class="col-md-8">
    <div class="card card-custom">
      <div class="card-header bg-white text-center">
        <h3 class="mb-0">
          <i class="bi bi-plus-circle text-primary me-2"></i>
          Criar Nova Lista
        </h3>
      </div>
      
      <div class="card-body">
        <%= form_with(model: @task_list) do |form| %>
          <div class="mb-4">
            <div class="form-floating">
              <%= form.text_field :title, 
                    class: "form-control form-control-lg",
                    placeholder: "Título da lista",
                    required: true,
                    autofocus: true,
                    id: "listTitle" %>
              <label for="listTitle">Título da lista</label>
            </div>
            <div class="form-text mt-1">
              Nome da lista
            </div>
          </div>
          
          <div class="mb-4">
            <div class="form-floating">
              <%= form.text_area :description, 
                    class: "form-control",
                    style: "height: 120px",
                    placeholder: "Descrição da lista",
                    id: "listDescription" %>
              <label for="listDescription">Descrição (opcional)</label>
            </div>
            <div class="form-text mt-1">
              Descrição da lista
            </div>
          </div>
          
          <div class="d-flex justify-content-between pt-3">
            <%= link_to task_lists_path, class: "btn btn-outline-secondary" do %>
              <i class="bi bi-arrow-left me-1"></i> Voltar
            <% end %>
            
            <%= form.submit "Criar Lista", 
                  class: "btn btn-primary btn-lg px-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>