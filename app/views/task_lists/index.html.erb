<div class="fade-in">
  <div class="mb-5">
    <h1 class="h2 fw-bold text-dark mb-2">
      <i class="bi bi-card-checklist text-primary me-2"></i>
      Minhas Listas
    </h1>
    <p class="text-muted mb-0">Listas para organizar suas tarefas</p>
  </div>
  
  <% if @task_lists.any? %>
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div class="text-muted">
        <%= @task_lists.count %> <%= @task_lists.count == 1 ? 'lista' : 'listas' %>
      </div>
      
      <%= link_to new_task_list_path, class: "btn btn-primary btn-lg shadow-sm" do %>
        <i class="bi bi-plus-circle me-2"></i>
        Nova Lista
      <% end %>
    </div>
    
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @task_lists.each do |list| %>
        <div class="col">
          <div class="card card-custom h-100">
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between align-items-start mb-3">
                <h5 class="card-title fw-bold mb-0">
                  <%= link_to list.title, list, class: "text-decoration-none text-dark" %>
                </h5>
                <span class="badge bg-primary rounded-pill">
                  <%= list.tasks.count %>
                </span>
              </div>
              
              <% if list.description.present? %>
                <p class="card-text text-muted flex-grow-1">
                  <%= list.description %>
                </p>
              <% end %>
              
              <div class="mt-auto pt-3">
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted">
                    <i class="bi bi-calendar3 me-1"></i>
                    <%= time_ago_in_words(list.created_at) %> atrÃ¡s
                  </small>
                  
                  <div class="btn-group">
                    <%= link_to edit_task_list_path(list), class: "btn btn-sm btn-outline-secondary",
                          title: "Editar lista" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    
                    <%= button_to task_list_path(list),
                          method: :delete,
                          class: "btn btn-sm btn-outline-danger",
                          form: { 
                            data: { 
                              confirm: "Excluir '#{list.title}' e suas #{list.tasks.count} tarefas?" 
                            } 
                          },
                          title: "Excluir lista" do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5 my-5">
      <div class="mb-4">
        <i class="bi bi-clipboard-x display-1 text-muted"></i>
      </div>
      <h3 class="text-muted mb-3">Nenhuma lista criada</h3>
      <p class="text-muted mb-4">
        Crie sua primeira lista abaixo
      </p>
      <%= link_to new_task_list_path, class: "btn btn-primary btn-lg px-4" do %>
        <i class="bi bi-plus-circle me-2"></i>
        Criar Primeira Lista
      <% end %>
    </div>
  <% end %>
</div>