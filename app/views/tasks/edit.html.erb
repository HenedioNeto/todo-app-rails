<div class="row justify-content-center fade-in">
  <div class="col-md-8">
    <div class="card card-custom">
      <div class="card-header bg-white">
        <h5 class="mb-0">
          <i class="bi bi-pencil text-primary me-2"></i>
          Editar Tarefa
        </h5>
        <p class="text-muted mb-0 small">Lista: <strong><%= @task_list.title %></strong></p>
      </div>
      
      <div class="card-body">
        <%= form_with(model: [@task_list, @task], local: true) do |form| %>
          <div class="mb-4">
            <div class="form-floating">
              <%= form.text_field :description, 
                    class: "form-control form-control-lg",
                    placeholder: "Descrição da tarefa",
                    required: true,
                    autofocus: true,
                    id: "taskDescription" %>
              <label for="taskDescription">Descrição da tarefa</label>
            </div>
          </div>
          
          <div class="mb-4">
            <div class="form-floating">
              <%= form.text_field :due_date,
                    class: "form-control",
                    placeholder: "DD/MM/AAAA",
                    id: "taskDueDate",
                    value: @task.due_date&.strftime("%d/%m/%Y") %>
              <label for="taskDueDate">Data limite (opcional)</label>
            </div>
            <div class="form-text">
              Formato: DD/MM/AAAA (ex: 25/12/2024)
            </div>
          </div>
          
          <div class="mb-4">
            <div class="form-floating">
              <%= form.text_area :notes,
                    class: "form-control",
                    style: "height: 100px",
                    placeholder: "Observações",
                    id: "taskNotes" %>
              <label for="taskNotes">Observações (opcional)</label>
            </div>
          </div>
          
          <div class="d-flex justify-content-between pt-3">
            <%= link_to @task_list, class: "btn btn-outline-secondary" do %>
              <i class="bi bi-arrow-left me-1"></i> Voltar
            <% end %>
            
            <%= form.submit "Atualizar Tarefa", 
                  class: "btn btn-primary btn-lg px-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>