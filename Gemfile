# Gemfile
source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby '3.4.2'

# Rails
gem 'rails', '~> 8.1.2'

# Database
gem 'pg', '~> 1.5'

# Puma web server
gem 'puma', '~> 6.4'

# Frontend
gem 'sassc-rails'
gem 'importmap-rails'
gem 'turbo-rails'
gem 'stimulus-rails'

# Bootstrap
gem 'bootstrap', '~> 5.3'

# Debug
gem 'debug', platforms: %i[ mri mingw x64_mingw ]

group :development do
  gem 'web-console'
end